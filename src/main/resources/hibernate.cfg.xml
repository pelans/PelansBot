<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/wordle_discord_bot</property>
        <property name="connection.username">root</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="org.pelans.wordle.Entities.ServerWord"/>
        <mapping class="org.pelans.wordle.Entities.ServerWordHistory"/>
        <mapping class="org.pelans.wordle.Entities.UserStats"/>
        <mapping class="org.pelans.wordle.Entities.UserWord"/>
        <mapping class="org.pelans.wordle.Entities.UserWordHistory"/>

    </session-factory>
</hibernate-configuration>